<div class="container">  
  <div class="text-center">
    <div class="row">
      <div class="col-md-6">
        <h3><%= @room.content %></h3>
      </div>
      <div class="col-md-6">
        <% if logged_in? %>
          <%= render 'favorites/favorite_button', room: @room %>
        <% end %>
      </div>
    </div>
  
    <p>
      <%= image_tag @room.image.url if @room.image? %>
    </p>
  
    
    <table class="table table-striped table-bordered">
      <tr>
        <td>賃料</td>
        <td><%= @room.rent %></td>
      </tr>
      <tr>
        <td>管理費等</td>
        <td><%= @room.management %></td>
      </tr>
      <tr>
        <td>間取り</td>
        <td><%= @room.floor %></td>
      </tr>
      <tr>
        <td>築年数</td>
        <td><%= @room.age %></td>
      </tr>
      <tr>
        <td>所在階/階数</td>
        <td><%= @room.number_of_floor %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @room.street_address %></td>
      </tr>
    </table>
  </div>
</div>


<style>
  .table {
    margin-top: 50px;
  }
  
  .row {
    margin-top: 40px;
  }

</style>
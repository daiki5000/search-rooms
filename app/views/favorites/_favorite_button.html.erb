<% if current_user.like?(room) %>
  <%= form_with(model: current_user.favorites.find_by(room_id: room.id),local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :room_id, room.id %>
    <%= f.submit 'お気に入り解除',class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :room_id, room.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-warning btn-sm' %>
  <% end %>
<% end %>
